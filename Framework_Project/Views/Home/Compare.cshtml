@{
    ViewData["title"] = "Danh sách so sánh";
    var key = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <h3>Danh sách so sánh</h3>

<div class="compare-container">
    @foreach (var compare_product in Model)
    {
        <div class="compare-item">
            <div class="product-image text-center">
                <img src="~/media/products/@compare_product.Product.Image" width="150px" height="180px" alt="@compare_product.Product.Name" />
            </div>
            <div class="product-details">
                <h4>@compare_product.Product.Name</h4>
                <p><strong>Giá:</strong> @compare_product.Product.Price.ToString("#,##0 VNĐ")</p>
                <p><strong>Mô tả:</strong> @Html.Raw(@compare_product.Product.Description)</p>
            </div>
            <div class="product-action text-center">
                <a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteCompare" asp-controller="Home" asp-route-Id="@compare_product.Compares.Id">Xóa</a>
            </div>
        </div>
    }
</div>

<style>
    .compare-container {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
    }

    .compare-item {
        border: 1px solid #ddd;
        padding: 15px;
        margin: 10px;
        width: 30%; /* Adjust width based on desired number of items per row */
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .product-image img {
        max-width: 100%;
        height: auto;
    }

    .product-details {
        margin-top: 15px;
        text-align: center;
    }

    .product-action {
        margin-top: 15px;
    }
</style>
</body>

</html>