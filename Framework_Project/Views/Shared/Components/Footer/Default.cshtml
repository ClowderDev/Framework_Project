@model ContactModel

@if (Model != null)
{
    <div class="row">

        <div class="col-sm-3">
            <div class="companyinfo">
                <p><img src="~/media/logo/@Model.LogoImg" width="200px" height="120px" /></p>
                <p>@Html.Raw(@Model.Description)</p>
            </div>
        </div>
        <div class="col-sm-5 col-md-5">
            @Html.Raw(@Model.Map)
        </div>
        <div class="col-sm-4">
            <div class="address">
                <h5><b>Name : @Model.Name</b></h5>
                <h5>Email : @Model.Email</h5>
                <h5>Hotline: @Model.Phone</h5>

            </div>
        </div>

        <div class="col-sm-4">
            <div class="fb-page"
                 data-href="https://www.facebook.com/UIT.Fanpage"
                 data-tabs="message" data-width="" data-height=""
                 data-small-header="false" data-adapt-container-width="true"
                 data-hide-cover="false" data-show-facepile="true">
                <blockquote cite="https://www.facebook.com/ttgshopvn" class="fb-xfbml-parse-ignore">
                    <a href="https://www.facebook.com/ttgshopvn">UIT</a>
                </blockquote>
            </div>
        </div>
    </div>
}