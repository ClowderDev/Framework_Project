@model IEnumerable<ContactModel>
@{
    ViewData["title"] = "Thông tin Liên hệ";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contact</title>
</head>
<body>
    <h3>Danh sách Liên hệ</h3>
    <div class="table table-responsive">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Contact">Thêm liên hệ</a>
        <table class="table table-responsive" id="myTable">
            <thead>
                <tr>
                    <th>Tên</th>
                    <th>Mô tả</th>
                    <th>Bản đồ</th>
                    <th>Email</th>
                    <th>Logo</th>
                    <th>Điện thoại</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Name</td>
                        <td>@Html.Raw(@item.Description)</td>
                        <td>@Html.Raw(@item.Map)</td>
                        <td>@item.Email</td>
                        <td> <img src="~/media/logo/@item.LogoImg" width="120px" height="150px" /> </td>
                        <td> @item.Phone </td>

                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Contact">Chỉnh sửa</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>