@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["title"] = "Danh sách Vai trò";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <partial name="_NotificationPartial" />
    <h3>Danh sách Vai trò</h3>

    <a class="btn btn-primary" asp-action="Create" asp-controller="Role">Thêm Vai trò</a>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên Vai trò</th>
                <th>Vai trò</th>
                
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.NormalizedName</td>
                   
                   
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id">Chỉnh sửa</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Role" asp-route-Id="@item.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
</body>
</html>